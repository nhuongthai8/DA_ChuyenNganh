@model IEnumerable<DACN.Models.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">Trang Quản Lý Khách Hàng</h2>

<table class="table">
    <tr>
        <th>
            Họ Tên
        </th>
        <th>
            Giới Tính
        </th>
        <th>
            Ngày Sinh
        </th>
        <th>
            SĐT
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Mail
        </th>
        <th>
            Tài Khoản
        </th>
        <th>
            Mật Khẩu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaiKhoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.ActionLink("Sửa", "EditKH", new { id=item.MaKH }) |
            @Html.ActionLink("Chi Tiết", "DetailsKH", new { id=item.MaKH }) |
            @Html.ActionLink("Xóa", "DeleteKH", new { id=item.MaKH })
        </td>
    </tr>
}

</table>
