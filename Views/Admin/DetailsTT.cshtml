@model DACN.Models.TinTuc

@{
    ViewBag.Title = "DetailsTT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Chi Tiết Tin Tức</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Loại Tin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TheLoaiTin.TenLoai)
        </dd>

        <dt>
            Tiêu Đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt>
            Nội Dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiDung)
        </dd>

        <dt>
            Ảnh Bìa
        </dt>

        <dd>
            <img src="@Url.Content("~/HinhTT/"+ Model.Anhbia)" width="120px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "EditTT", new { id = Model.idTT }) |
    @Html.ActionLink("Trở Về Danh Sách", "TinTuc")
</p>
